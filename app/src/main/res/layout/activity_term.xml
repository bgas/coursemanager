<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context=".TermActivity">

    <TextView
        android:id="@+id/termTitle"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="25sp"
        android:text="@string/term"
        android:layout_alignParentLeft="true" />
    <TextView
        android:id="@+id/textViewTermTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/termTitle"
        android:layout_marginEnd="15dp"
        android:layout_alignParentTop="true"
        android:textSize="25sp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/termTitle" />

    <TextView
        android:id="@+id/contentList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/termTitle"
        android:textSize="20sp"
        android:text="@string/contains_courses" />

    <ListView
        android:id="@+id/android:list"
        android:layout_below="@id/contentList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <at.markushi.ui.CircleButton
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:cb_color="@color/colorPrimary"
        app:cb_pressedRingWidth="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_action_add"
        android:onClick="openEditorForNewItem" />



